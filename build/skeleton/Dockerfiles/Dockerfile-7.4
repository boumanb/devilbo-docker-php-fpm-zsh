LABEL "org.opencontainers.image.licenses"="MIT"
LABEL "org.opencontainers.image.ref.name"="7.4-community"
LABEL "org.opencontainers.image.title"="PHP-FPM 5-community"
LABEL "org.opencontainers.image.description"="PHP-FPM 7.4-community"



###
### Default upstream volumes
###
VOLUME /shared/backups
VOLUME /var/log/php
VOLUME /var/mail


###
### Default upstream ports
###
EXPOSE 9000


###
### Default upstream workdir
###
WORKDIR /shared/httpd


###
### Default upstream Entrypoint
###
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/supervisord.conf"]
ENTRYPOINT ["/docker-entrypoint.sh"]
